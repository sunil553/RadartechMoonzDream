<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_parent_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_title">

    <ImageView
        android:id="@+id/menu_imageView"
        style="@style/imageview_infoactivity"
        android:layout_margin="5dp"
        android:contentDescription="@string/load_image_failed" />

    <com.radartech.customviews.RadarTextView
        android:id="@+id/menu_textView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/menu_imageView"
        android:paddingLeft="@dimen/menu_textview_padding"
        android:text="menu"
        android:textColor="@color/white"
        android:textSize="@dimen/menu_textsize"
        app:typeface="ubuntu" />

    <View
        android:id="@+id/menu_separatorView"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/menubar_bg" />
</RelativeLayout>