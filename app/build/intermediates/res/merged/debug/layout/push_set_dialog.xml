<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    style="@style/match_match"
    android:background="@drawable/tiledstripes" >

    <LinearLayout

        style="@style/match_match"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="20dip" >

        <LinearLayout
            style="@style/match_match"
            android:background="#9C9C9C"
            android:orientation="vertical"
            android:padding="10dip" >

         <TextView
             style="@style/wrap_wrap"
                android:text="Settings Tag and Alias "
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            style="@style/match_match"
            android:layout_marginTop="10dip"
            android:background="@drawable/corners_bg"
            android:orientation="vertical"
            android:paddingBottom="20dip"
            android:paddingTop="20dip" >

            <LinearLayout
                style="@style/match_match"
                android:orientation="horizontal" >

                <TextView
                    style="@style/wrap_wrap"
                    android:text=" Tag :" />

                <EditText
                    android:id="@+id/et_tag"
                    style="@style/push_tag"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bt_tag"
                    style="@style/wrap_wrap"
                    android:text="Settings Tag"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout

                style="@style/match_match"
                android:orientation="horizontal" >

                <TextView
                    style="@style/wrap_wrap"
                    android:text="Alias:" />

                <EditText
                    android:id="@+id/et_alias"
                    style="@style/push_alias"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bt_alias"
                    style="@style/wrap_wrap"
                    android:text="Settings Alias"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/match_match"

            android:layout_marginTop="10dip"
            android:background="#9C9C9C"
            android:orientation="vertical"
             android:padding="10dip" >

            <TextView
                style="@style/wrap_wrap"
                android:text="Customize the notification bar style"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            style="@style/match_match"
            android:layout_marginTop="10dip"
            android:background="@drawable/corners_bg"
            android:orientation="vertical"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <Button
                android:id="@+id/setStyle1"
                style="@style/match_wrap"
                android:text="Customize the notification bar style：Basic" />

            <Button
                android:id="@+id/setStyle2"
                style="@style/match_wrap"
                android:text="Customize the notification bar style：Custom" />
        </LinearLayout>

        <LinearLayout
            style="@style/match_match"
            android:layout_marginTop="10dip"
            android:background="#9C9C9C"
            android:orientation="vertical"
            android:padding="10dip"
            >
            <TextView
                style="@style/wrap_wrap"
                android:text="Settings"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            style="@style/match_match"
            android:layout_marginTop="10dip"
            android:background="@drawable/corners_bg"
            android:orientation="vertical"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >
            <Button
                android:id="@+id/bu_setTime"
                style="@style/match_wrap"
                android:layout_marginTop="20dip"
                android:text="Set Receive push time" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>