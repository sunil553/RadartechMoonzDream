<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/match_match"
              android:background="@drawable/dialog_shadow"
              android:orientation="vertical"
              android:padding="@dimen/cardview_parent_padding">

    <com.radartech.customviews.RadarTextView
        android:id="@+id/dialog_title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/dialog_title_paddinBottom"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/dialog_title_paddingTop"
        android:text="@string/logout_dialog_title_text"
        android:textColor="@color/text_color_dark_blue"
        android:textSize="@dimen/forgotpassword_title_textsize"
        app:typeface="ubuntu_medium"/>

    <com.radartech.customviews.RadarTextView
        android:id="@+id/dialog_content_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/dialog_title_paddinBottom"
        android:paddingTop="@dimen/dialog_title_paddingTop"
        android:text="@string/logout_dialog_title_text"
        android:textColor="@color/dialog_content_text_color"
        android:textSize="@dimen/forgotpassword_title_textsize"
        android:visibility="gone"
        app:typeface="ubuntu"/>

    <com.radartech.customviews.RadarButton
        android:id="@+id/dialog_first_button"
        style="@style/magellan_button"
        android:layout_marginTop="@dimen/forgotpassword_layout_margin_top"
        android:text="@string/logout"
        app:typeface="ubuntu_medium"/>

    <com.radartech.customviews.RadarButton
        android:id="@+id/dialog_second_button"
        style="@style/magellan_button"
        android:layout_marginTop="@dimen/dialog_button_marginTop"
        android:text="@string/cancel"
        app:typeface="ubuntu_medium"/>

</LinearLayout>

