<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_match"
    android:background="@color/white_title"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <EditText
        android:id="@+id/et_update_password_old_password"
        style="@style/modifily_passsword"
        android:hint="@string/edit_password_input_old_password"

        />

    <EditText
        android:id="@+id/et_update_password_new_password"
        style="@style/modifily_passsword"
        android:hint="@string/edit_password_input_new_password"
        />

    <EditText
        android:id="@+id/et_update_password_confirm_new_password"
        style="@style/modifily_passsword"
        android:hint="@string/edit_password_confirm_new_password"/>
</LinearLayout>